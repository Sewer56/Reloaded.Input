<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <Description>Simple autogenerated input remapping form for Reloaded.Input.</Description>
    <Authors>Sewer56</Authors>
    <PackageLicenseExpression>LGPL-3.0-or-later</PackageLicenseExpression>
    <Copyright>LGPLV3</Copyright>
    <PackageProjectUrl>https://github.com/Sewer56/Reloaded.Input.git</PackageProjectUrl>
    <PackageIcon>Preview.png</PackageIcon>
    <RepositoryUrl>https://github.com/Sewer56/Reloaded.Input.git</RepositoryUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.0.3</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="PropertyChanged.Fody" Version="3.4.1">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Reloaded.WPF.Theme.Default" Version="3.0.8">
      <IncludeAssets>all</IncludeAssets>
      <PrivateAssets>analyzers;build</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Reloaded.Input\Reloaded.Input.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\Docs\Images\Preview.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>